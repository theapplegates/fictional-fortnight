<article class="full section" style="--spot-color: var(--color-bg-accent)">
  {% svg "divider/soft-top" %}

  <section class="section__inner wrapper">
    <h2>Based on, or built with Eleventy Excellent:</h2>
    <div
      class="grid region"
      style="--region-space-top: var(--space-xl); --gutter: var(--space-xl) var(--space-m)"
    >
      <!-- you find tha data for that in src/_data/builtwith.json -->
      {% for site in builtwith | reverse %}
        <custom-card no-padding equally-spaced img-square class="text-step-min-1">
          {% image site.screenshot, site.name, null, "lazy", null, sizes, widths %}
          <p slot="content">{{ site.description }}</p>
          <footer slot="footer">
            <a class="no-indicator" href="{{ site.link }}">{{ site.link | replace("https://", "") }}</a>
          </footer>
        </custom-card>
      {% endfor %}
    </div>
  </section>

  {% svg "divider/soft-bottom" %}
</article>
